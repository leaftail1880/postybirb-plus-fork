{
  "name": "postybirb-plus",
  "version": "3.1.20",
  "description": "(ClientServer) PostyBirb is an application that helps artists post art and other multimedia to multiple websites more quickly.",
  "main": "back/main.js",
  "author": "Michael DiCarlo",
  "license": "BSD-3-Clause",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://mvdicarlo@github.com/mvdicarlo/postybirb-plus.git"
  },
  "scripts": {
    "nest": "nest",
    "prebuild": "rimraf back tsconfig.build.tsbuildinfo",
    "postinstall": "electron-builder install-app-deps",
    "build": "nest build",
    "build:linux": "electron-builder -l",
    "build:osx": "electron-builder -m",
    "build:windows": "electron-builder -w",
    "build:release": "export $(cat .env | xargs) && electron-builder -mwl -p always",
    "release:windows": "electron-builder -w -p always",
    "release:linux": "electron-builder -l -p always",
    "release:osx": "export $(cat .env | xargs) && electron-builder -m -p always",
    "clean": "rimraf release",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run prebuild && nest build && electron back/main --develop --log-level=3",
    "start:dev": "nest start --watch",
    "start:debug": "npm run prebuild && nest start --debug --watch && electron back/main --develop"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@mtproto/core": "^6.2.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/platform-socket.io": "^8.0.0",
    "@nestjs/schedule": "^2.2.2",
    "@nestjs/websockets": "^8.0.0",
    "chardet": "^0.8.0",
    "cheerio": "^1.0.0-rc.10",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "electron-context-menu": "^0.15.2",
    "electron-updater": "^5.2.1",
    "electron-window-state": "^5.0.3",
    "form-data": "^4.0.0",
    "fs-extra": "^8.1.0",
    "iconv-lite": "^0.6.3",
    "image-decode": "^1.2.2",
    "jimp": "^0.22.8",
    "lodash": "^4.17.20",
    "lowdb": "^1.0.0",
    "mastodon-api": "^1.3.0",
    "nanoid": "^2.1.8",
    "nedb": "^1.8.0",
    "node-forge": "^0.10.0",
    "parse5": "^5.1.1",
    "postybirb-commons": "file:../commons",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "rimraf": "^3.0.0",
    "rxjs": "^7.1.0",
    "sanitize-html": "^2.10.0",
    "set-cookie-parser": "^2.6.0",
    "shortid": "^2.2.16",
    "turndown": "^5.0.3",
    "uuid": "^8.3.2",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/cheerio": "^0.22.31",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^8.1.2",
    "@types/lodash": "^4.14.194",
    "@types/lowdb": "^1.0.11",
    "@types/node": "^17.0.21",
    "@types/node-forge": "^0.9.10",
    "@types/request": "^2.48.8",
    "@types/set-cookie-parser": "0.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "electron": "^19.1.9",
    "electron-builder": "^23.6.0",
    "supertest": "^6.3.3",
    "ts-loader": "^8.3.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.9.0"
  },
  "build": {
    "appId": "com.lemonynade.postybirb.plus",
    "productName": "PostyBirb+",
    "publish": {
      "provider": "github",
      "owner": "mvdicarlo",
      "repo": "postybirb-plus"
    },
    "directories": {
      "buildResources": "packaging-resources",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icons/icon.icns",
      "gatekeeperAssess": false,
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}.${ext}",
      "icon": "icons/icon_256x256x32.png",
      "category": "Network",
      "publish": [
        "github"
      ],
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    },
    "win": {
      "publisherName": [
        "Michael DiCarlo"
      ],
      "icon": "icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
